<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/companyTV"
        style="@style/Label.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/company_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workStateTV"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/work_state"
        app:layout_constraintTop_toBottomOf="@id/companyTV" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fuelsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/workStateTV" />

</androidx.constraintlayout.widget.ConstraintLayout>